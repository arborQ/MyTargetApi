doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    title= title
    if production
      link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha/css/bootstrap.min.css')
      link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/angularjs-toaster/0.4.15/toaster.min.css')
      link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css')
      link(rel='stylesheet', href='site.min.css')
    else
      link(rel='stylesheet', href='bower_components/bootstrap/dist/css/bootstrap.css')
      link(rel='stylesheet', href='bower_components/AngularJS-Toaster/toaster.css')
      link(rel='stylesheet', href='bower_components/font-awesome/css/font-awesome.css')
      link(href='slidebar-site.css', rel='stylesheet')
      link(href='site.css', rel='stylesheet')
    link(rel="shortcut icon", type="image/ico", href="/images/favicon.ico")
  body(ng-app="app", ng-controller="applicationCtr as appCtr", ng-cloak="")
    toaster-container
    #wrapper
      #sidebar-wrapper
        a.logo(ui-sref="home")
          img(src="images/logo.png")
        ul.sidebar-nav
          li(ng-repeat="item in appCtr.userData | availableStates:appCtr.listOfMenuPositons:appCtr.listOfAllStates")
            a(ui-sref='{{item.name}}', ui-sref-active="active") 
              i.fa(ng-class='item.data.icon') 
              span {{ 'menu.' + (item.name | normalize) | i18n}}
      #header.container-fluid.flex-container(ng-if="!!appCtr.userData")
        a.user(ui-sref="settings.account")
          img(src="images/user.png")
        a(ui-sref="home", ng-click="appCtr.logOut($event)")  {{ 'common.logout' | i18n }}
      #header.container-fluid.flex-container(ng-if="!appCtr.userData")
        a(ui-sref="login") {{ 'common.login' | i18n }}
      .alert.alert-success.animate(ng-show="$loading") loading ...
      #page-content-wrapper(ui-view="")
    script(src="structure.js")
    if production
      script(src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0-beta.1/angular.min.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0-beta.1/angular-cookies.min.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0-beta.1/angular-sanitize.min.js")
      script(src="bower_components/angular-localization/angular-localization.min.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0-beta.1/angular-resource.min.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0-beta.1/angular-messages.min.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.min.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.min.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha/js/bootstrap.min.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/holder/2.8.2/holder.min.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/angularjs-toaster/0.4.15/toaster.min.js")
      script(src="//cdn.rawgit.com/auth0/angular-jwt/master/dist/angular-jwt.min.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/angular-local-storage/0.2.2/angular-local-storage.min.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.14.1/ui-bootstrap.js")
      script(src="site.min.js")
    else
      script(src="bower_components/angular/angular.js")
      script(src="bower_components/angular-cookies/angular-cookies.js")
      script(src="bower_components/angular-sanitize/angular-sanitize.js")
      script(src="bower_components/angular-localization/angular-localization.js")
      script(src="bower_components/angular-resource/angular-resource.js")
      script(src="bower_components/angular-messages/angular-messages.js")
      script(src="bower_components/angular-ui-router/release/angular-ui-router.js")
      script(src="bower_components/jquery/dist/jquery.js")
      script(src="bower_components/bootstrap/dist/js/bootstrap.js")
      script(src="bower_components/holderjs/holder.js")
      script(src="bower_components/AngularJS-Toaster/toaster.js")
      script(src="bower_components/angular-jwt/dist/angular-jwt.js")
      script(src="bower_components/angular-local-storage/dist/angular-local-storage.js")
      script(src="bower_components/angular-bootstrap/ui-bootstrap.js")
      script(src="auth/auth.js")
      script(src="users/users.js")
      script(src="settings/settings.js")
      script(src="application/application.js")
